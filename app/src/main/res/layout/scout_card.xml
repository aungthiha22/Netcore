<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardMaxElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/ProjectGreen"/>

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageViewUpload"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/upload_unfinish"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/clock1"/>

                        <TextView
                            android:id="@+id/tvTimeAgo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="time ago"
                            android:textSize="11sp"
                            android:textColor="#f58fa1"
                            android:layout_marginLeft="5dp"
                            android:gravity="right"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/forOnClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvCompanyName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/ProjectBlack"
                        android:textSize="21sp"
                        android:text="Sample Text"
                        android:fontFamily="@font/zawgyi_one2008"/>

                    <TextView
                        android:id="@+id/tvScoutType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:textColor="@color/ProjectTextHint"
                        android:textSize="16sp"
                        android:text="Sample Text"
                        android:fontFamily="@font/zawgyi_one2008"
                        android:gravity="right"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="#606061"
                        android:textSize="15sp"
                        android:text="Sample Text"
                        android:fontFamily="@font/zawgyi_one2008" />

                    <TextView
                        android:id="@+id/tvTownship"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/ProjectTextHint"
                        android:textSize="15sp"
                        android:text="Sample Text"
                        android:fontFamily="@font/zawgyi_one2008"
                        android:gravity="right" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>