<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dime_4"
                android:layout_marginBottom="@dimen/margin_24"
                android:orientation="vertical"
                android:padding="@dimen/dime_4"
                >

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilBillingTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_8"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:hint="@string/billing_title"
                    android:textColorHint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBillingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:textSize="@dimen/text_regular_14"
                        android:textColor="@color/colorPrimary"

                />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/billing_no"
                    android:paddingLeft="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_regular_12"/>
            <TextView
                    android:id="@+id/tvBillingNo"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_regular_14"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilBillingFor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_8"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:hint="@string/billing_for"
                    android:textColorHint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBillingFor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:textSize="@dimen/text_regular_14"
                        android:textColor="@color/colorPrimary"

                />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:text="@string/status"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_regular_12"/>

            <!--for Customer Name Info-->
            <com.systematic.netcore.utility.SpinnerSearchForCustomer
                    android:id="@+id/spStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/billing_date"
                    android:paddingLeft="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_regular_12"/>
            <TextView
                    android:id="@+id/tvBillingDate"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_regular_14"/>

            <TextView
                    android:id="@+id/tvBillingType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:text="@string/bill_type"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_regular_12"/>

            <!--for Customer Name Info-->
            <com.systematic.netcore.utility.SpinnerBillTesting
                    android:id="@+id/spBillType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"/>

            <TextView
                    android:id="@+id/tvRepeatType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:text="@string/repeat_type"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_regular_12"/>

            <!--for Customer Name Info-->
            <com.systematic.netcore.utility.SpinnerSearchForCustomer
                    android:id="@+id/spRepeatType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/end_date"
                    android:paddingLeft="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_regular_12"/>
            <TextView
                    android:id="@+id/tvEndDate"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_regular_14"/>

            <TextView
                    android:id="@+id/tvSaleOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:text="@string/sale_order"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_regular_12"/>

            <!--for Customer Name Info-->
            <com.systematic.netcore.utility.SpinnerSearchForCustomer
                    android:id="@+id/spSaleOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"/>
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilContactInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_8"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:hint="@string/contact_info"
                    android:textColorHint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etContactInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:textSize="@dimen/text_regular_14"
                        android:textColor="@color/colorPrimary"

                />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_billing"
                    android:paddingLeft="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_regular_12"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amount"
                    android:paddingLeft="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_regular_12"/>
            <TextView
                    android:id="@+id/tvAmount"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_regular_14"/>

            <TextView
                    android:id="@+id/tvCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:text="@string/currency"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_regular_12"/>

            <!--for Customer Name Info-->
            <com.systematic.netcore.utility.SpinnerSearchForCustomer
                    android:id="@+id/spCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilRemainderOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_8"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:hint="@string/remainder_one"
                    android:textColorHint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRemainderOne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:textSize="@dimen/text_regular_14"
                        android:textColor="@color/colorPrimary"

                />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilRemainderTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_8"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:hint="@string/remainder_two"
                    android:textColorHint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRemainderTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:textSize="@dimen/text_regular_14"
                        android:textColor="@color/colorPrimary"

                />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next_bill_date"
                    android:paddingLeft="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_regular_12"/>
            <TextView
                    android:id="@+id/tvNextBillDate"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_regular_14"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next_target_bill_date"
                    android:paddingLeft="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_regular_12"/>
            <TextView
                    android:id="@+id/tvNextTargetBillDate"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_regular_14"/>


            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilImportantLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_8"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:hint="@string/important_level"
                    android:textColorHint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etImportantLevel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:textSize="@dimen/text_regular_14"
                        android:textColor="@color/colorPrimary"

                />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilReminderEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_8"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:hint="@string/reminder_email"
                    android:textColorHint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etReminderEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:textSize="@dimen/text_regular_14"
                        android:textColor="@color/colorPrimary"

                />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilLatePolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_8"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:hint="Late Policy"
                    android:textColorHint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etLatePolicy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:textSize="@dimen/text_regular_14"
                        android:textColor="@color/colorPrimary"

                />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:id="@+id/tvNotifyUser1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:text="@string/notify_user_1"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_regular_12"/>

            <!--for Customer Name Info-->
            <com.systematic.netcore.utility.SpinnerSearchForCustomer
                    android:id="@+id/spNotifyUser1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"/>

            <TextView
                    android:id="@+id/tvNotifyUser2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:text="@string/notify_user_2"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_regular_12"/>

            <!--for Customer Name Info-->
            <com.systematic.netcore.utility.SpinnerSearchForCustomer
                    android:id="@+id/spNotifyUser2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_10"/>

            <Button
                    android:id="@+id/btnSaveBill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_8"
                    android:text="Save"
                    android:textColor="@color/color_white"
                    android:background="@drawable/rectangleshape"
                    android:backgroundTint="@color/colorPrimary"/>

            <Button
                    android:id="@+id/btnSeeTableData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_8"
                    android:text="see table data"
                    android:layout_marginTop="@dimen/margin_14"
                    android:textColor="@color/color_white"
                    android:background="@drawable/rectangleshape"
                    android:backgroundTint="@color/colorPrimary"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>